/* pages/goForBike/goForBike.wxss */
.main{
  width:100%;
  height:100vh;
  padding:10vh 5vw;
  text-align: center;
  box-sizing: border-box;
}
.main .welcome{
  margin-bottom:2vh;
  font-size: 26px;
  width:100%;
}
.main .notice{
  font-size:16px;
  color:#aaa;
  margin-bottom:3vh;
}
.main>.btn{
  margin:0 auto;
  margin-bottom:3vh;
  height:8vh;
  line-height:8vh;
  width:70vw;
  border-radius:4vh;
  border:none;
  font-size:16px;
}
.main>.btn.saoma{
  background: #FFDE24;
}
.main>.btn.shuru{
  background: #fff;
  border:1px solid #aaa;
}