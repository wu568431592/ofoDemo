/* pages/myCenter/myCenter.wxss */
.main{
  width:100%;
  height:100vh;
  box-sizing: border-box;
  padding:5vh 0 10vh 4vw;
}
.main .item{
  width:100%;
  border-bottom:1px solid #eee;
  margin-bottom: 2vh;
  position: relative;
}
.main .item .h4{
  font-size: 20px;
  margin-bottom: 3vh;
}
.main .item .notice{
  font-size: 16px;
  color:#999;
  margin-bottom: 2vh;
}
.main .item .notice text{
  color:#e4393c;
  padding:0 5px;
}
.main .item .btn{
  position: absolute;
  right:5vw;
  top:0vh;
  width:25vw;
  border:1px solid #aaa;
  height:6vh;
  line-height: 6vh;
  text-align: center;
  border-radius:3vh;
  font-size: 16px;
  color:#aaa;
}
.main .item .btn.active{
  color:#333;
  border:none;
  background: #FFDE24;
}
.main .item .songti{
  position: absolute;
  right:5vw;
  top:3.5vh;
  width:15px;
  height:15px;
  border-top:1px solid #aaa;
  border-right:1px solid #aaa;
  transform: rotate(45deg);
}